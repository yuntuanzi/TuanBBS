{% if session_expired == true %}
    <div id="modalOverlay">
{% endif %}
<div class="container{{ add_class }}" style="margin-top: 40px;"> {# 增加顶部40px间距 #}
<div class="row">
<div class="col-12 text-center">
<a href="{{ 'https://github.com/yuntuanzi/'|link }}" target="_blank" rel="noopener noreferrer" class="logo">
<img src="../../static/images/default-avatar.png" id="imLogo" name="imLogo" alt="喜灰论坛" border="0" 
     style="width: 80px; height: 80px; border-radius: 8px; max-width: 100%;">
</a>
